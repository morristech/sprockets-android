<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="NavigationDrawerItem">
        <item name="android:textSize">@dimen/navigation_drawer_item_text</item>
        <item name="android:textColor">@color/navigation_drawer_item_text</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="NavigationDrawerItem.Selected">
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="NavigationDrawerSubItem">
        <item name="android:textSize">@dimen/navigation_drawer_sub_item_text</item>
        <item name="android:textColor">@color/navigation_drawer_sub_item_text</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Card"/>

    <style name="Card.Title">
        <item name="android:textSize">@dimen/text_large</item>
        <item name="android:textColor">@color/text_title</item>
        <item name="android:fontFamily">sans-serif-light</item>
    </style>

    <style name="Card.Title.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Card.Title.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Card.Title.Medium.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Card.Title.Header">
        <item name="android:textColor">@color/text_title_header</item>
    </style>

    <style name="Card.Text">
        <item name="android:textSize">@dimen/text_small</item>
        <item name="android:textColor">@color/text</item>
        <item name="android:textColorHint">@color/text_lighter</item>
    </style>

    <style name="Card.Text.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Card.Text.Medium">
        <item name="android:textSize">@dimen/text_medium</item>
    </style>

    <style name="Card.Text.Medium.Light">
        <item name="android:textColor">@color/text_light</item>
    </style>

    <style name="Card.Text.Medium.Link">
        <item name="android:textColor">@color/text_link</item>
    </style>

</resources>
